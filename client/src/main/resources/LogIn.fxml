<?xml version="1.0" encoding="UTF-8"?>

<?import com.gluonhq.charm.glisten.layout.Layer?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.Scene?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.BoxBlur?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<Scene xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/11.0.1">
    <AnchorPane disable="true" focusTraversable="true" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
                minWidth="-Infinity" prefHeight="640.0" prefWidth="960.0" styleClass="login_bg"
                stylesheets="@styles.css">
        <children>
            <Layer autoHide="false" layoutX="255.0" layoutY="100.0" opacity="0.4" prefHeight="400.0" prefWidth="450.0"
                   styleClass="login_blur" stylesheets="@styles.css">
                <effect>
                    <BoxBlur height="10.0" iterations="3" width="10.0"/>
                </effect>
            </Layer>
            <Layer layoutX="255.0" layoutY="80.0" prefHeight="150.0" prefWidth="450.0" styleClass="logo_view"
                   stylesheets="@styles.css"/>
            <PasswordField alignment="CENTER" editable="false" layoutX="380.0" layoutY="320.0" prefHeight="50.0"
                           prefWidth="200.0" promptText="Password" styleClass="log_input" stylesheets="@styles.css"/>
            <TextField alignment="CENTER" editable="false" layoutX="380.0" layoutY="260.0" maxHeight="-Infinity"
                       maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="50.0"
                       prefWidth="200.0" promptText="E-Mail" styleClass="log_input" stylesheets="@styles.css">
                <cursor>
                    <Cursor fx:constant="DEFAULT"/>
                </cursor>
            </TextField>
            <Button id="login_button" layoutX="380.0" layoutY="380.0" maxHeight="-Infinity" maxWidth="-Infinity"
                    minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" prefHeight="50.0"
                    prefWidth="200.0" stylesheets="@styles.css" text="Log In" textAlignment="CENTER" textFill="WHITE">
                <font>
                    <Font name="Berlin Sans FB Bold" size="14.0"/>
                </font>
            </Button>
        </children>
    </AnchorPane>
</Scene>
